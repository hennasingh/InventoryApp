<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="#C5E1A5"
    android:padding="16dp">

         <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/placeholder_name_text"
            android:textSize="@dimen/text_16sp"
             android:padding="@dimen/padding_4dp"
            android:textColor="@color/dark_green"/>


            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                tools:text="@string/placeholder_text_price"
                android:drawableLeft="@drawable/ic_euro"
                android:textColor="@color/lime"/>

            <TextView
                android:id="@+id/product_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                android:drawableLeft="@drawable/ic_collections"
                android:layout_toRightOf="@id/product_price"
                android:layout_marginLeft="@dimen/margin_20dp"
                tools:text="@string/placeholder_text_stock"
                android:textColor="@color/lime"/>


    <ImageButton
        android:id="@+id/button_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_cart"
        android:background="@color/lime_dark"
        android:padding="@dimen/padding_4dp"/>

    </RelativeLayout>



